class Solution {
    public long maxTotalValue(int[] nums, int k) {
        int[] r=nums;
        int max=Integer.MIN_VALUE;
        int min=Integer.MAX_VALUE;
        for(int i=0;i<r.length;i++){
            if(nums[i]>max){
                max=r[i];
            }if(nums[i]<min){
                min=r[i];
            }
        }long highSum=(long)max-(long)min;
        return highSum*k;
        
    }
}
