class Solution {
    public long maxTotalValue(int[] nums, int k) {
        int[] rai=nums;
        int max=Integer.MIN_VALUE;
        int min=Integer.MAX_VALUE;
        for(int i=0;i<rai.length;i++){
            if(nums[i]>max){
                max=rai[i];
            }if(nums[i]<min){
                min=rai[i];
            }
        }long highSum=(long)max-(long)min;
        return highSum*k;
        
    }
}Â©leetcode
